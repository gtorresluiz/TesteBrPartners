@model Cliente
@{
    ViewData["Title"] = "Adicionar Cliente";
}

<h2>Adicionar Cliente</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Nome</label>
        <input asp-for="Nome" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Telefone</label>
        <input asp-for="Telefone" />
    </div>
    <button type="submit">Salvar</button>
</form>
